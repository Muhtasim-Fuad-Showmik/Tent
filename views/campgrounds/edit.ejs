<% layout('layout/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-title pt-4">
                    <h1 class="text-center">Edit Campground</h1>
                </div>
                <div class="card-body">
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="needs-validation"
                        novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="campground[title]"
                                value="<%= campground.title %>" required>
                            <div class="valid-feedback">
                                Sounds good!
                            </div>
                            <div class="invalid-feedback">
                                What should I call the campground?
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="campground[location]"
                                value="<%= campground.location %>" required>
                            <div class="valid-feedback">
                                Valid location!
                            </div>
                            <div class="invalid-feedback">
                                Where can I find this place?
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                                    aria-describedby="price-label" name="campground[price]"
                                    value="<%= campground.price %>" required>
                                <div class="valid-feedback">
                                    Interesting price.
                                </div>
                                <div class="invalid-feedback">
                                    Nervous on this one. Can I afford this place?
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="campground[description]"
                                required><%= campground.description %></textarea>
                            <div class="valid-feedback">
                                Very interesting...
                            </div>
                            <div class="invalid-feedback">
                                Tell me more about this place. I'm intrigued.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Add More Images</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>
                        <div class="container">
                            <div class="row">
                                <% campground.images.forEach( (img, i)=> { %>
                                    <div class="col-6 col-md-4">
                                        <img src="<%= img.thumbnail %>" class="img-thumbnail thumbnail-img" alt="">
                                        <br>
                                        <div class="form-check-inline">
                                            <input type="checkbox" id="img-<%= i %>" name="deleteImages[]"
                                                value="<%= img.filename %>">
                                        </div>
                                        <label for="img-<%= i %>">Delete</label>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>

                        <div class="d-grid map-2 mb-3 mt-4">
                            <button class="btn btn-info">Update Campground</button>
                        </div>
                    </form>
                    <p class="text-center">
                        <a class="text-decoration-none text-dark" href="/campgrounds/<%= campground._id %>">Back to Campground</a>
                    </p>
                </div>
            </div>
        </div>
    </div>